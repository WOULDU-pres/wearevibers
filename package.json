{
  "name": "wearevibers",
  "private": true,
  "version": "1.0.0",
  "description": "WeAreVibers - Modern social platform for vibrant communities",
  "type": "module",
  "homepage": "https://wearevibers.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/wearevibers.git"
  },
  "keywords": ["social", "community", "react", "typescript", "vite", "supabase"],
  "author": "WeAreVibers Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite --port 8080 --host",
    "build": "tsc && vite build",
    "build:dev": "tsc && vite build --mode development",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "build:stats": "vite build --mode production --json > dist/stats.json",
    "preview": "vite preview --port 4173 --host",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:strict": "eslint . --ext ts,tsx --max-warnings 0",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/**/*.{test,spec}.{ts,tsx}",
    "test:integration": "vitest run tests/integration/**/*.{test,spec}.{ts,tsx}",
    
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chrome": "playwright test --project='Desktop Chrome'",
    "test:e2e:firefox": "playwright test --project='Desktop Firefox'",
    "test:e2e:safari": "playwright test --project='Desktop Safari'",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:accessibility": "playwright test --project='Accessibility Tests'",
    "test:e2e:performance": "playwright test --project='Performance Tests'",
    "test:e2e:visual": "playwright test --project='Visual Tests'",
    "test:e2e:report": "playwright show-report",
    
    "test:all": "npm run test:run && npm run test:e2e",
    "test:ci": "npm run lint:strict && npm run type-check && npm run test:coverage && npm run test:e2e",
    "security:audit": "npm audit --audit-level high",
    "security:fix": "npm audit fix",
    "security:scan": "npx audit-ci --config .audit-ci.json",
    "security:check": "npm run security:audit && npm run security:scan",
    "deps:update": "npx npm-check-updates -u",
    "deps:check": "npx npm-check-updates",
    "deps:audit": "npm run deps:check && npm run security:check",
    "lighthouse": "lhci autorun",
    "lighthouse:mobile": "lhci autorun --preset=mobile",
    "lighthouse:ci": "lhci autorun --config=lighthouserc.js",
    "lighthouse:upload": "lhci upload",
    "performance:analyze": "npm run build:analyze && npm run lighthouse",
    "performance:audit": "npm run lighthouse:ci && npm run test:e2e:performance",
    "performance:budget": "bundlesize",
    "backup": "./scripts/backup-restore.sh backup",
    "backup:restore": "./scripts/backup-restore.sh restore",
    "deploy:staging": "vercel --env NODE_ENV=development",
    "deploy:production": "vercel --prod",
    "deploy:preview": "vercel",
    "clean": "rm -rf dist node_modules/.vite .tsbuildinfo",
    "clean:all": "rm -rf dist node_modules package-lock.json .tsbuildinfo && npm install",
    "clean:cache": "rm -rf node_modules/.vite node_modules/.cache .tsbuildinfo",
    "clean:test": "rm -rf coverage test-results playwright-report",
    
    "setup:dev": "npm install && npm run type-check && npm run lint",
    "setup:e2e": "npx playwright install",
    "setup:all": "npm run setup:dev && npm run setup:e2e",
    
    "validate": "npm run quality:check && npm run test:all",
    "validate:ci": "npm run test:ci && npm run performance:budget",
    
    "quality:check": "npm run lint:strict && npm run type-check && npm run test:coverage",
    "quality:fix": "npm run lint:fix && npm run format",
    "quality:audit": "npm run quality:check && npm run security:check && npm run performance:audit",
    
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,md}'",
    "postinstall": "npm run type-check",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\"",
    "precommit": "lint-staged",
    "prepush": "npm run quality:check"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@mdxeditor/editor": "^3.40.1",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-aspect-ratio": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-context-menu": "^2.2.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-hover-card": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@sentry/react": "^9.42.0",
    "@sentry/tracing": "^7.120.3",
    "@sentry/vite-plugin": "^4.0.1",
    "@supabase/supabase-js": "^2.52.1",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tanstack/react-query": "^5.56.2",
    "@types/dompurify": "^3.0.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "caniuse-lite": "^1.0.30001727",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "dompurify": "^3.2.6",
    "embla-carousel-react": "^8.3.0",
    "framer-motion": "^12.23.9",
    "input-otp": "^1.2.4",
    "lucide-react": "^0.526.0",
    "motion": "^12.23.9",
    "next-themes": "^0.3.0",
    "playwright": "^1.54.2",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.53.0",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^2.1.3",
    "react-router-dom": "^6.26.2",
    "react-syntax-highlighter": "^15.6.1",
    "recharts": "^2.12.7",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.43.1",
    "vaul": "^0.9.3",
    "web-vitals": "^5.0.3",
    "zod": "^3.23.8",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "lovable-tagger": "^1.1.7",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "@lhci/cli": "^0.13.0",
    "audit-ci": "^7.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-check-updates": "^17.1.1",
    "vite-bundle-analyzer": "^1.1.0",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run security:audit"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
